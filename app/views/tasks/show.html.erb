<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>
  <% if @task.completed === true%>
     <%= "this task is completed" %>
     <% else %>
     <%= "this task isnt completed yet" %>
     <% end %>
</p>
<%=link_to "back to list", tasks_path(@tasks) %>
<%=link_to "Edit task", edit_path(@task) %>
<%=link_to "Delete task",task_path(@task),  method: :delete,
      data: { confirm: "Are you sure?" }%>
